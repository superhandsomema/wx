/* components/tabBar/tabBar.wxss */

.tabBar {
	width: 100%;
	height: 98rpx;
	border-top: 1px solid #ddd;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 666;
	background-color: #fff;
	padding-top: 12rpx;
	box-sizing: border-box;
}
.isIphoneX {
	height: 142rpx;
	padding-bottom: 44rpx;
}
.tabBar .tabItems {
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	text-align: center;
}
.tabItem {
	width: 80rpx;
	position: relative;
	text-align: center;
}
.tabItem image {
	display: block;
	width: 50rpx;
	height: 50rpx;
	margin: 0 auto;
}
.redDian {
	 width: 18rpx; 
	height: 18rpx;
	border-radius: 10rpx;
	background-color: red;
	opacity: 0.8;
	position: absolute;
	top: -4rpx;
	right: -16rpx; 
}
.textWrap{
	height:36rpx;
	line-height:24rpx;
}
.text {
	font-size:20rpx;
