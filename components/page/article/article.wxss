/* <!-- 图文展示 点击跳转详情页 --> */

.image-text {
    /* width: 100%; */
    height: 260rpx;
    padding: 40rpx 0;
    margin: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    border-bottom: 1rpx solid #eee;
}

.image-text .cont, .image-text .cont image {
    width: 330rpx;
    height: 180rpx;
}

.image-text .cont {
    margin-right: 30rpx;
}

.image-text1 .content {
    width: 715rpx;
    height: 868rpx;
    margin: 0 auto 30rpx;
    border-radius: 50rpx;
}

.image-text1 .conten image {
    width: 715rpx;
    height: 868rpx;
    margin: 0 auto;
}

.uploadWrap {
    height: 586rpx;
    width: 100%;
    display: flex;
    display: -webkit-box;
    flex-direction: column;
}

.upload_Item {
    width: 330rpx;
    height: 586rpx;
    border-radius: 20rpx;
    overflow: hidden;
    flex: 1;
    margin: 0 10rpx;
    background: #aaa;
    position: relative;
}

.section-title {
    width: 100%;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
}
